---
layout: layouts/base.njk
---

<ul class="post__list">
    {%- for post in collections.post.reverse() -%}
    <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <time datetime="{{ post.data.date | format_date_to_iso_string }}" class="post__date">{{ post.data.date | format_date_to_date_string }}</time>
    </li>
    {%- endfor -%}
</ul>
